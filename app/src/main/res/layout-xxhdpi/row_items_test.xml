<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="385dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="320dp"
        android:layout_height="372dp"
        android:layout_gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="370dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="265dp"
                android:layout_height="138dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="265dp"
                    android:layout_height="138dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/thumbnailUrlPhotoViewNew1"
                        android:layout_width="265dp"
                        android:layout_height="138dp" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-1sp"
                    android:paddingTop="30dp"
                    android:text="SEBASTIAN VETTEL WINS INDIAN GRAND PRIX IN INTENSE THRILLER"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="151dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center"
                    android:lineSpacingExtra="-1sp"
                    android:text="I'M JUST WAFFLING TO SEE HOW MUCH TEXT FITS IN THE SCREEN AND YEAH TODAY IS REALY BRIGHT AND SUNNY. I WISH I COULD GO OUT TODAY AND JUST ROAM AROUND. ALSO IM RUNNING OUT OF THINGS TO TYPE SO YEAH HOPEFULLY THESE WORDS ARE ENOUGH"
                    android:textColor="@color/purple"
                    android:textSize="10.25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ReviewTxt"
                        android:layout_width="154dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/baloo_bhai"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceTxt"
                        android:layout_width="189dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="right"
                        android:text="Â£"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PriceTxt"
                        android:layout_width="99dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="right"
                        android:text="1312.17"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>